---
import { getLangFromUrl, useTranslations } from '../../app/i18n/utils'
import Layout from '../../app/layouts/Layout.astro';

import { getStaticPaths } from '../../app/i18n/getStaticPaths'
export { getStaticPaths }

import Hud from '../../widgets/hud/Hud'
import Menu from '../../widgets/menu/Menu'
import Works from '../../widgets/works/Works'
import MobileMenu from '../../widgets/mobileMenu/MobileMenu'
import InitScripts from '../../app/InitScripts.astro'

const { locale } = Astro.params

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<Layout>
  <Hud client:load />
  <Menu client:only />
  <MobileMenu client:load />

  <div class="wordite_page_container">
    <div class="wordite_page_content">
      <Works client:only />
    </div>
  </div>

  <InitScripts />
</Layout>


